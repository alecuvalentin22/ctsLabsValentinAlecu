package ro.ase.acs.example;

public class ClassOne {
	
	public float calculate(int quarter, float productPrice, int period)
	  {
	    // float result = 0;
	    float discount = (period > 10) ? (float)30/100 : (float)period/100; 
	    if (quarter == 1)
	    {
	    	return productPrice;
	    }
	    else if (quarter == 2)
	    {
	    	return (productPrice - (0.1f * productPrice)) - discount * (productPrice - (0.1f * productPrice));
	    }
	    else if (quarter == 3)
	    {
	    	return (productPrice - (0.25f * productPrice)) - discount * (productPrice - (0.25f * productPrice));
	    }
	    else if (quarter == 4)
	    {
	    	return (productPrice - (0.35f * productPrice)) - discount * (productPrice - (0.35f * productPrice));
	    }
	    return 0;
	  }

}
